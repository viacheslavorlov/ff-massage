---
const {description, image, price, duration} = Astro.props
---

<div class="flex flex-col gap-8">
	<div class="rounded-[20px] overflow-hidden">
		<img src={image} class="object-cover w-full h-full" alt="">
	</div>
	<p class="text-black text-left">{description}</p>
	<div class="flex justify-between">
		<div class="text-2xl text-black font-bold">{duration}</div>
		<div class="text-2xl font-extrabold">{price} ла</div>
	</div>
</div>